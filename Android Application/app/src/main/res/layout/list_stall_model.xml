<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/spotName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="00dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/list_stall_model_name"
        android:textColor="#000000"/>

    <TextView
        android:id="@+id/spotStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/list_stall_model_status"
        android:layout_alignBaseline="@+id/spotName"
        android:layout_alignBottom="@+id/spotName"
        android:layout_toRightOf="@+id/spotName"
        android:layout_toEndOf="@+id/spotName"
        android:layout_marginLeft="000dp"
        android:layout_marginStart="100dp"
        android:layout_marginBottom="20dp"
        android:textColor="#000000"
        />
</RelativeLayout>